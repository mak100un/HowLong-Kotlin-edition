<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:colorActivatedHighlight">@color/colorActivatedHighlight</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:datePickerDialogTheme">@style/MaterialComponentsDialogStyle</item>
        <item name="android:timePickerDialogTheme">@style/MaterialComponentsDialogStyle</item>
        <!-- This is the styling for action bar -->
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/AppTheme.MenuTextStyle</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">@android:color/background_light</item>
    </style>
    
    <!-- Theme for splashActivity -->
    <style name="SplashTheme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
    </style>
    
    <style name="MaterialComponentsDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/colorActivatedHighlight</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonBarStyle</item>
    </style>
    
    <style name="DialogButtonBarStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorActivatedHighlight</item>
    </style>
    
    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@android:color/black</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBarTitle</item>
    </style>
    
    <style name="AppTheme.ActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="AppTheme.MenuTextStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="AppTheme.CenterStyle">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    
    <style name="MatchParentTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="HeightWrapContentTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="WrapContentTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="LottieAnimationStyle" parent="AppTheme.CenterStyle">
        <item name="android:layout_width">@dimen/lottie_width</item>
        <item name="android:layout_height">@dimen/lottie_height</item>
        <item name="android:layout_marginTop">@dimen/lottie_layout_marginTop</item>
    </style>
    
    <style name="TitleTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="MenuItemTextViewStyle" parent="TitleTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>
    
    <style name="PrimaryBlueTextViewStyle" parent="TitleTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="GroupHeaderTextViewStyle" parent="PrimaryBlueTextViewStyle">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="SettingsGroupHeaderTextViewStyle" parent="PrimaryBlueTextViewStyle">
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="PlaceholderTextViewStyle" parent="PrimaryBlueTextViewStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    
    <style name="RecyclingTextViewStyle" parent="PlaceholderTextViewStyle">
        <item name="android:textColor">@color/colorGreen</item>
    </style>
    
    <style name="FlawTextViewStyle" parent="PlaceholderTextViewStyle">
        <item name="android:textColor">@color/colorRed</item>
    </style>
    
    <style name="SubTitleTextViewStyle" parent="TitleTextViewStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="DescriptionTextViewStyle" parent="SubTitleTextViewStyle">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="SettingDescriptionTextViewStyle" parent="DescriptionTextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDarkerGray</item>
    </style>
    
    <style name="NormalTextViewStyle" parent="SubTitleTextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="ButtonStyle" parent="AppTheme.CenterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:stateListAnimator">@animator/button_elevation_animator</item>
        <item name="android:elevation">@dimen/primary_elevation</item>
        <item name="android:textSize">15sp</item>
        <item name="android:clickable">true</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
    </style>
    
    <style name="ActionButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:translationZ">@dimen/zero</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@dimen/zero</item>
        <item name="android:background">@drawable/action_button_background</item>
        <item name="android:textColor">@color/colorAction</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:clickable">true</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/action_button_horizontal_padding</item>
    </style>
    
    
    <style name="HorizontalDividerStyle">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="VerticalDividerStyle">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    
</resources>