<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bottom_sheet"
        style="@style/HeightWrapContentTheme"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_sheet_header_background"
        android:elevation="@dimen/cool_elevation"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/bottom_sheet_header_height"
        app:layout_behavior="@string/bottom_sheet_behavior">
    
    <View
            android:layout_width="@dimen/bottom_sheet_header_line_width"
            android:layout_height="@dimen/vertical_line_width"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/bottom_sheet_header_line_vertical_margin"
            android:background="@drawable/bottom_sheet_header_line"
            android:clickable="true" />
    
    <ListView
            android:id="@+id/statistics_list"
            style="@style/HeightWrapContentTheme"
            android:divider="@null"
            android:scrollbars="none"
            android:listSelector="@android:color/transparent"
            tools:background="@color/colorAccent" />
    
    <View style="@style/HorizontalDividerStyle" />

</LinearLayout>