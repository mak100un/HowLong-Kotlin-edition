<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/setting_container"
        style="@style/HeightWrapContentTheme"
        android:orientation="vertical"
        android:background="@drawable/ripple_white_background">
    
    <com.example.howlong.widgets.LightFontTextView
            android:id="@+id/setting_title"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginHorizontal="@dimen/horizontal_padding"
            style="@style/DescriptionTextViewStyle"
            tools:text="Заголовок"/>
    
    <com.example.howlong.widgets.LightFontTextView
            android:id="@+id/setting_description"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginHorizontal="@dimen/horizontal_padding"
            style="@style/SettingDescriptionTextViewStyle"
            tools:text="Описание"/>
    
    <View android:id="@+id/setting_divider"
          style="@style/HorizontalDividerStyle"/>

</LinearLayout>