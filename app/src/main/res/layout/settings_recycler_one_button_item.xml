<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/HeightWrapContentTheme"
        android:orientation="vertical"
        android:background="@color/colorBackground">
    
    <LinearLayout
            style="@style/HeightWrapContentTheme"
            android:layout_marginHorizontal="@dimen/horizontal_padding"
            android:layout_marginVertical="@dimen/vertical_margin"
            android:orientation="horizontal">
    
        <com.example.howlong.widgets.LightFontTextView
                android:id="@+id/setting_title"
                android:layout_gravity="center_vertical"
                style="@style/DescriptionTextViewStyle"
                android:layout_width="@dimen/zero"
                android:layout_weight="1"
                tools:text="Заголовок"/>
        
        <ImageButton
                android:rotation="180"
                android:id="@+id/setting_button"
                style="@style/ActionButtonStyle"
                android:layout_width="@dimen/action_button_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/vertical_spacing"
                tools:src="@drawable/ic_moon" />
    
    </LinearLayout>
   
    <View android:id="@+id/setting_divider"
            style="@style/HorizontalDividerStyle"/>

</LinearLayout>